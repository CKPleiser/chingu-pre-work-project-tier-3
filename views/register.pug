extends base

block content
  form#signup(method="POST", autocomplete="off")
    .form-group
      label(for="name") Name:
      input.form-control(
        type="text"
        id="name"
        name="name"
        placeholder="John Doe"
        required
      )


    .form-group
      label(for="email") E-Mail:
      input.form-control(
        type="email"
        id="email"
        name="email"
        placeholder="you@example.com"
        required
      )

    .form-group
      label(for="password") Password:
      input.form-control(
        type="password"
        id="password"
        name="password"
      )

    .form-group
      label(for="password_confirm") Confirm Password:
      input.form-control(
        type="password"
        id="password_confirm"
        name="password_confirm"
      )

    button.btn.btn-primary Sign Up



